<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OnesieMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OnesieMobile"
    xmlns:view="clr-namespace:OnesieMobile.View"
    Shell.FlyoutBehavior="Disabled" WidthRequest="320">
    <TabBar>
        <Tab Title="Home">
            <ShellContent
                Title="Home" Icon="Resources/Icons/HomeIcon.png"
                ContentTemplate="{DataTemplate view:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Settings" >
            <ShellContent
                Title="Settings"  
                ContentTemplate="{DataTemplate view:SettingsPage}"
                Route="SettingsPage" />
        </Tab>
    </TabBar>
</Shell>
